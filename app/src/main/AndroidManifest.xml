<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gustumi">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- PERMISO DE INTERNET PARA EL PROYECTO -->
    <uses-configuration android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- PERMISO PARA LEER LA TARJETA SD DEL DISPOSITIVO -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activities.EditarRecetaActivity"></activity>
        <activity android:name=".activities.MostrarRecetasActivity" />
        <activity android:name=".activities.GestionarRecetaActivity" />
        <activity android:name=".activities.AprendeActivity" />
        <activity android:name=".activities.FavoritosActivity" />
        <activity android:name=".activities.DetalleRecetaActivity" />
        <activity android:name=".activities.ResultadoBusquedaActivity" />
        <activity android:name=".activities.OlvidarContrasenaActivity" />
        <activity android:name=".activities.PerfilUsuarioActivity" />
        <activity android:name=".activities.IniciarSesionActivity" />
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter> <!-- Le indico cuál va a ser el primer Activity que va a cargar la aplicación -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.RegistrarseActivity" />
        <activity android:name=".activities.ExplorarCategoriasActivity" />
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>