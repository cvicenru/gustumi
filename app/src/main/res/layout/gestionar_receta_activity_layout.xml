<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo2"
    tools:context=".activities.GestionarRecetaActivity">

    <TextView
        android:id="@+id/textViewGestionarReceta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Gestionar receta"
        android:textColor="@color/verde2"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--cardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="394dp"
        android:layout_height="match_parent"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        app:cardBackgroundColor="@color/blanco"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="367dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="367dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgFotoReceta"
                        android:layout_width="210dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/icono_seleccionar_img_receta"/>

                    <Button
                        android:id="@+id/btnSeleccionarImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:background="@color/amarillo1"
                        android:text="Seleccionar imagen..."
                        android:padding="5dp"
                        android:textAllCaps="false"
                        android:textColor="@color/verde1"
                        android:textSize="12sp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/editTextNombreReceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Nombre de la receta"
                    android:inputType="textNoSuggestions" />

                <EditText
                    android:id="@+id/editTextTiempoElaboracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Tiempo de elaboración ( X min.)"
                    android:inputType="textNoSuggestions" />

                <EditText
                    android:id="@+id/editTextIngredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Ingredientes ( Ingrediente 1, Ingrediente 2 )"
                    android:inputType="textNoSuggestions" />

                <EditText
                    android:id="@+id/editTextElaboracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="Elaboración ( Paso 1., Paso 2., Paso 3. )"
                    android:inputType="textNoSuggestions" />


                <Button
                    android:id="@+id/btnCrearReceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/amarillo1"
                    android:text="Crear receta"
                    android:textAllCaps="false"
                    android:textColor="@color/verde1"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnMostrarRecetas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/verde2"
                    android:text="Mostrar recetas"
                    android:textAllCaps="false"
                    android:textColor="@color/amarillo2"
                    android:textSize="16sp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>